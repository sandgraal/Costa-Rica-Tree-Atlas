# =============================================================================
# SECURITY WARNING: DO NOT COMMIT ACTUAL VALUES TO GIT
# Copy this file to .env.local and fill in your actual secrets
# =============================================================================

# =============================================================================
# Authentication (REQUIRED for production)
# =============================================================================

# --- Legacy Basic Auth (DEPRECATED - will be removed) ---
# Admin password - MUST be strong (12+ chars, upper/lower/number/special)
# Generate with: npm run generate:secrets
# ADMIN_PASSWORD=
# ADMIN_USERNAME=admin

# --- New Database-Backed Authentication ---

# Vercel Postgres connection string
# Get from: https://vercel.com/docs/storage/vercel-postgres/quickstart
DATABASE_URL=

# NextAuth secret for JWT signing (256-bit minimum)
# Generate with: openssl rand -hex 32
NEXTAUTH_SECRET=

# NextAuth URL (your site URL)
NEXTAUTH_URL=http://localhost:3000

# MFA encryption key for TOTP secrets (64-character hex string = 32 bytes)
# Generate with: openssl rand -hex 32
MFA_ENCRYPTION_KEY=

# =============================================================================
# Rate Limiting (REQUIRED for production)
# =============================================================================

# Upstash Redis for persistent rate limiting
# Sign up for free at https://upstash.com (10,000 commands/day free tier)
# Without these, rate limiting uses in-memory storage (resets on deployment)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Number of trusted proxy hops (optional, default: 2)
# - Behind Cloudflare + Vercel: 2 (default)
# - Behind Cloudflare only: 1
# - Behind custom CDN + Cloudflare + Vercel: 3
# - Direct to Vercel (no CDN): 1
# TRUSTED_PROXY_COUNT=2

# =============================================================================
# Optional Features
# =============================================================================

# Google Cloud APIs (optional)
# GOOGLE_VISION_API_KEY=
# GOOGLE_MAPS_API_KEY=

# CSP Violation Reporting (optional)
# CSP_REPORT_URI=https://your-logging-service.com/csp-report

# =============================================================================
# Error Tracking (Sentry)
# =============================================================================

# Sentry DSN for error tracking (optional but recommended for production)
# Get from: https://sentry.io → Settings → Projects → [Project] → Client Keys
# Format: https://<key>@o<org-id>.ingest.sentry.io/<project-id>
# NEXT_PUBLIC_SENTRY_DSN=

# Sentry auth token for source maps upload (optional)
# Get from: https://sentry.io → Settings → Auth Tokens
# SENTRY_AUTH_TOKEN=

# Sentry organization and project slugs (for source maps)
# SENTRY_ORG=your-org
# SENTRY_PROJECT=costa-rica-tree-atlas

# =============================================================================
# Public Variables (exposed to browser)
# =============================================================================

# Site URL for canonical links and SEO
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Analytics domain (optional)
# NEXT_PUBLIC_ANALYTICS_DOMAIN=costaricatreeatlas.com
