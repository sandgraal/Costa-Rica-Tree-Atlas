{
  "name": "costa-rica-tree-atlas",
  "version": "0.1.0",
  "private": true,
  "license": "AGPL-3.0-or-later AND CC-BY-NC-SA-4.0",
  "scripts": {
    "dev": "next dev",
    "build": "npm run prisma:generate:optional && contentlayer2 build && next build",
    "prisma:generate:optional": "if [ -n \"$DATABASE_URL\" ]; then prisma generate; else echo 'Skipping Prisma generation (DATABASE_URL not set)'; fi",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md,mdx,css}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,md,mdx,css}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "security:audit": "npm audit --audit-level=high",
    "security:check": "npm run lint && npm run type-check && npm run security:audit",
    "prepare": "husky",
    "postinstall": "npm run prisma:generate:optional",
    "contentlayer": "contentlayer2 build",
    "generate:secrets": "node scripts/generate-secrets.mjs",
    "validate:env": "node -e \"require('./src/lib/env/schema.ts')\"",
    "images:audit": "node scripts/manage-tree-images.mjs audit",
    "images:audit:all": "node scripts/manage-tree-images.mjs audit && node scripts/manage-tree-images.mjs audit-gallery",
    "images:audit:gallery": "node scripts/manage-tree-images.mjs audit-gallery",
    "images:validate": "node scripts/validate-image-references.mjs",
    "images:validate:verbose": "node scripts/validate-image-references.mjs --verbose",
    "images:download": "node scripts/manage-tree-images.mjs download",
    "images:download:force": "node scripts/manage-tree-images.mjs download --force",
    "images:refresh": "node scripts/manage-tree-images.mjs refresh",
    "images:refresh:gallery": "node scripts/manage-tree-images.mjs refresh-gallery",
    "images:refresh:gallery:force": "node scripts/manage-tree-images.mjs refresh-gallery --force",
    "images:check": "node scripts/cleanup-tree-images.mjs",
    "images:cleanup": "node scripts/cleanup-tree-images.mjs --write",
    "images:cleanup:force": "node scripts/cleanup-tree-images.mjs --write --force",
    "images:optimize": "node scripts/optimize-images.mjs",
    "images:optimize:force": "node scripts/optimize-images.mjs --force",
    "images:optimize:hero": "node scripts/optimize-hero-image.mjs",
    "images:migrate": "node scripts/migrate-mdx-to-local-images.mjs",
    "images:setup-all": "npm run images:download && npm run images:optimize && npm run images:migrate"
  },
  "browserslist": [
    "defaults and supports es6-module"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/mdx": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@next/mdx": "^16.1.1",
    "@prisma/client": "^6.1.0",
    "@swc/helpers": "^0.5.18",
    "@tanstack/query-sync-storage-persister": "^5.90.16",
    "@tanstack/react-query": "^5.90.16",
    "@tanstack/react-query-persist-client": "^5.90.16",
    "@tanstack/react-virtual": "^3.13.18",
    "@upstash/ratelimit": "^2.0.7",
    "@upstash/redis": "^1.36.0",
    "@vercel/analytics": "^1.6.1",
    "@vercel/postgres": "^0.10.0",
    "@vercel/speed-insights": "^1.3.1",
    "argon2": "^0.41.1",
    "contentlayer2": "^0.5.8",
    "date-fns": "^4.1.0",
    "fuse.js": "^7.1.0",
    "html2canvas": "^1.4.1",
    "jose": "^6.1.3",
    "next": "16.1.1",
    "next-auth": "^4.24.10",
    "next-contentlayer2": "^0.5.8",
    "next-intl": "^4.7.0",
    "next-mdx-remote": "^5.0.0",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.4",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "rehype-pretty-code": "^0.14.1",
    "sharp": "^0.34.5",
    "shiki": "^3.20.0",
    "zod": "^4.3.5",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@tailwindcss/postcss": "^4",
    "@tanstack/react-query-devtools": "^5.90.16",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/google.maps": "^3.58.1",
    "@types/mdx": "^2.0.13",
    "@types/node": "^25",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/ui": "^4.0.16",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prisma": "^6.1.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.16"
  }
}
