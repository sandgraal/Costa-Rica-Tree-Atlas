{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "security"
      ]
    ],
    "subject-case": [2, "always", "sentence-case"],
    "body-max-line-length": [0, "always", 200]
  }
}
